
{% extends '::base.html.twig'  %}

{% block body %}
<div class="container">

    <div class="hero-unit">
        <p>
        {{ question.translation }}
        </p>
    </div>


    <form action="{{ path('answer') }}" method="post" {{ form_enctype(form) }} novalidate >

        {{ form_errors(form) }}

        {% for item in form  %}
            {{ form_widget(form.inputText) }}
        {% endfor %}

        {{ form_rest(form) }}

        <div>
            <input type="submit" class="btn btn-primary" value="Check" />
        </div>
        <div>
            <a href="{{ path('select') }}">select</a>
        </div>
    </form>
</div>
{% endblock %}
